{

  "manifest_version": 2,
  "name": "World Clock",
  "version": "1.0",

  "description": "Add a clock to the page with a selected time zone.",

  "icons": {
    "48": "icons/clock-48.png",
    "96": "icons/clock-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/clock-32.png",
    "default_title": "World Clock",
    "default_popup": "popup/timezone.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/clock.js"]
    }
  ]
}